{
  "name": "CBS Companion",
  "version": "1.0",
  "description": "Chrome extension of CBS Companion.",
  "permissions": ["declarativeContent", "notifications", "tabs", "http://localhost:3000/", "https://www.cbsnews.com/search/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Icon-16.png",
      "32": "images/Icon-32.png",
      "48": "images/Icon-48.png",
      "128": "images/Icon-128.png"
    }
  },
  "icons": {
    "16": "images/Icon-16.png",
    "32": "images/Icon-32.png",
    "48": "images/Icon-48.png",
    "128": "images/Icon-128.png"
  },
  "manifest_version": 2
}